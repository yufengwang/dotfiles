[pull]
  rebase = false

[grep]
  extendRegexp = true
  lineNumber = true

[color]
  ui = true

[alias]
  co = checkout
  ci = commit
  st = status
  br = branch
  type = cat-file -t
  dump = cat-file -p
  hist = log --pretty=format:'%h %ad |%d %s [%an]' --graph --date=short
  undo = checkout
  unstage = reset HEAD --
  gr = grep --break --heading --line-number

[init]
  defaultBranch = main
